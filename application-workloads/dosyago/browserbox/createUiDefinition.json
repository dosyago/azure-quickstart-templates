{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Azure.CreateUIDef",
  "version": "0.1.2-preview",
  "parameters": {
    "config": {
      "basics": {
        "description": "This template sets up a BrowserBox service for instant Remote Browsing from Azure!",
        "location": {
          "label": "Location",
          "resourceTypes": [ "NewRelic.Observability/monitors" ]
        }
      }
    },
    "resourceTypes": [ "NewRelic.Observability/monitors" ],
    "basics": [
      {
        "name": "virtualMachineSize",
        "type": "Microsoft.Compute.SizeSelector",
        "label": "Virtual Machine Size",
        "toolTip": "Select the size of the Virtual Machine.",
        "recommendedSizes": [
          "Standard_DS1_v2",
          "Standard_DS2_v2",
          "Standard_DS3_v2"
        ],
        "constraints": {
          "allowedSizes": []
        },
        "options": {
          "hideDiskTypeFilter": true
        },
        "osPlatform": "Linux",
        "count": 1,
        "visible": true
      },
      {
        "name": "emailAddress",
        "type": "Microsoft.Common.TextBox",
        "label": "Email Address",
        "toolTip": "Provide your work email address",
        "constraints": {
          "required": true,
          "regex": "^[A-Za-z0-9._%+-]+@(?:[A-Za-z0-9-]+\\.)+[A-Za-z]{2,}$",
          "validationMessage": "Please enter a valid email address."
        }
      }
    ],
    "steps": [],
    "outputs": {
      "virtualMachineSize": "[basics('virtualMachineSize')]",
      "emailAddress": "[basics('emailAddress')]"
    }
  }
}
